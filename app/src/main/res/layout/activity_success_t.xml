<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".success_t">

    <TextView
        android:id="@+id/success1"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@drawable/img_10"
        android:text="" />

    <TextView
        android:id="@+id/s_t"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="YOUR TRANSACTION IS DONE!"
        android:textColor="#7ADD7E"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="#BBF6BD"
        android:text="something"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#38E46A"
        android:padding="10dp"
        android:text="Return Main page"
        android:textSize="21dp"
        android:layout_margin="2dp"/>
</LinearLayout>