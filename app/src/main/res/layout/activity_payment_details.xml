<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/success_l"
        android:visibility="visible">

        <TextView
            android:id="@+id/success1"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:background="@drawable/img_10"
            android:text="" />

        <TextView
            android:id="@+id/success2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="YOUR TRANSACTION IS DONE!"
            android:textColor="#7ADD7E"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:padding="30dp"
            android:background="#BBF6BD"
            android:text="something"
            android:textStyle="bold"
            android:textSize="15dp" />

        <Button
            android:id="@+id/success3"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#38E46A"
            android:padding="10dp"
            android:text="Return Page"
            android:textSize="21dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fail_l"
        android:visibility="gone">

        <TextView
            android:id="@+id/fail1"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:background="@drawable/img_9"
            android:text="" />

        <TextView
            android:id="@+id/fail2"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="#F6E1E1"
            android:gravity="center"
            android:text="Failed to Top Up Your Balance"
            android:textColor="#5E5D5D"
            android:textSize="20dp" />

        <Button
            android:id="@+id/fail3"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#E43838"
            android:padding="10dp"
            android:text="Try again"
            android:textSize="21dp" />
    </LinearLayout>

</LinearLayout>